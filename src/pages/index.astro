---
import SideNav from '../components/sideNav.astro';
import TopNav from '../components/topNav.astro'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" type="text/css" href="/css/global.css" />
		<link rel="stylesheet" type="text/css" href="/css/utility.css" />
		<link rel="stylesheet" type="text/css" href="/css/template.css" />
		<meta name="viewport" content="width=device-width" />
		<title>Astro</title>
	</head>
	<body>
		<div class="master-container">
			<SideNav />
			<div class="page-content-container">
				<div class="top-nav">
					<div class="top-bar">
						<div class="user-info">
							<img src="owner.png" alt="User Image" class="user-img"/>
							<div class="flex-column">
							<div class="flex-row">
								<a class="top-nav-user-button button-style">Sign Out</a>
								<a class="top-nav-user-button button-style">Subscribe</a>
							</div>
							
							<div class="user-text flex-row">
								<p>You are signed in as, <br/><span class="username">[Name]</span></p>
							</div>
						</div>
						</div>
						<div class="search-bar">
							<input type="text" placeholder="" class="search-bar-box">
							<button class="search-btn">Q</button>
						</div>
						<div class="notifications">
							<div class="notif">
								<img src="messageicon.svg" alt="User Image" class="icon"/>
								<p class="notif-count">7</p>
								
							</div>
							<div class="notif">
								<img src="notificon.svg" alt="User Image" class="icon"/>
								<p class="notif-count">3</p>
							</div>
						</div>
					</div>
			
					<div class="nav-bar">
						<div class="nav-bar-links">
							<a class="button-style">American</a>
							<a class="button-style">Asian</a>
							<a class="button-style">Celtic</a>
							<a class="button-style">American</a>
							<a class="button-style">Asian</a>
							<a class="button-style">Celtic</a>
							<a class="button-style">American</a>
							<a class="button-style">Asian</a>
							<a class="button-style">Celtic</a>
							<a class="button-style">Celtic</a>
						</div>
						<div class="nav-bar-crumb paddingtop1rem">
							<div class="breadcrumb">Ancient Civs > Near Eastern</div>
						</div>
					</div>
				</div>
					<style>
					body {
				font-family: Arial, sans-serif;
				color: white;
				margin: 0;
			}
			.top-nav {
				background-color: #1a1a1a;
			}
			.top-bar {
				display: flex;
				justify-content: space-between;
				align-items: center;
				padding: 10px 20px;
			}
			
			.user-info {
				display: flex;
			
				align-items: center;
			}
			.flex-column {
				display: flex;
				flex-direction: column;
			}
			.user-img {
				width: 90px;
				border-radius: 50%;
				margin-right: 10px;
			}
			
			.user-text {
				display: flex;
				flex-direction: column;
				align-items: flex-start;
			}
			.search-bar-box {
				background-color: magenta;
			}
			
			.top-nav-user-button {
				background-color: purple;
				color: white;
				border: none;
				height: 20px;
				cursor: pointer;
			}
			.flex-row {
				display: flex;
			}
			.username {
				font-weight: bold;
			}
			
			.search-bar {
				display: flex;
				align-items: center;
				width: 20%;
				height: 30px;
			}
			
			.search-bar input {
				padding: 5px;
				width: 80%;
				border-radius: 5px;
				border: none;
				margin-right: 5px;
				height: 100%;
			}
			
			.search-btn {
				background-color: purple;
				color: white;
				border: none;
				border-radius: 50%;
				width: 30px;
				height: 30px;
				display: flex;
				justify-content: center;
				align-items: center;
				cursor: pointer;
			}
			
			.icon {
				height: 35px;
				width: 35px;
				padding: 5px;
				border: 1px orange solid;
				border-radius: 50%;
			}
			.notif {
				display: flex;
			
			}
			.notifications {
				display: flex;
				align-items: center;
				margin-bottom: auto;
			}
			
			.notif-count {
				background-color: red;
				color: white;
				border: none;
				border-radius: 50%;
				width: 20px;
				height: 20px;
				display: flex;
				justify-content: center;
				align-items: center;
				margin-top: 0;
				cursor: pointer;
			}
			
			.nav-bar {
				display: flex;
				flex-direction: column;
				padding: 10px 20px;
				background-color: grey;
			}
			.paddingtop1rem {
				padding-top: 1rem;
			}
			.nav-bar-links {
				display: flex;
				justify-content: space-between;
				align-items: center;
				width: 100%;
				height: 30px;
			}
			
			.button-style {
				background-color: black;
				color: white;
				border: none;
				padding: 5px 15px;
				border-radius: 15px;
				margin: 5px;
				cursor: pointer;
				align-content: center;
				margin: auto;
				
			 }
			
			.breadcrumb {
				font-style: italic;
				color: #aaa;
			}
			
					</style>
				<div class="content-container mt-xlarge" style="display: flex;">
					<h2 class="major-heading">Welcome to Ancient Civilzations.</h2>
					<p class="">A website that focuses on... [description here]</p>
				</div>
				
				<div class="content-container mt-xlarge" style="display: flex;">
					<h2 class="major-heading">Our mission.</h2>
					<p class="">We're here to provide a unique forum experience, imagine our service as a social media that has a ancient history twist. </p>
				</div>
			</div>
			
		</div>
		
		/********************************************************************************************************* */
	
	
	
	
	
	</body>








	
	/**
	 * This is the CSS style block for the index page.
	 * It defines the styles for the body, page content container, content container, and master container.
	 */
	<style>
		body {
			max-width: 100vw;
			height: 100vh;
			width: 100vw;
		}
		.page-content-container {
			background-color: var(--background-color);
			flex: 1;
		}
		.content-container {
			display: flex;
			flex-direction: column;
			text-align: center;
			background-color: var(--content-grey);
			width: 50%;
			margin-inline: auto;
			border-radius: 10px;
		}
		.master-container {
			display: flex;
			height: 100%;
		}
	</style>
</html>
